{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/domain",
  "lib": {
    "entryFile": "src/index.ts"
  },
  "allowedNonPeerDependencies": ["@angular/*"],
  "assets": ["interfaces/**/*.d.ts", "business/**/*.d.ts"],
  "secondaryEntryPoints": {
    "interfaces": {
      "entryFile": "interfaces/src/index.ts"
    },
    "business": {
      "entryFile": "business/src/index.ts"
    }
  }
}
